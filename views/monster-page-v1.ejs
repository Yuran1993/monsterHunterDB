      <header class="container">
        <div class="buttonWrapper">
  
          <div class="buttonWrapper_inner">
            <a class="backBtn button" title="Back" href="/monster-list">
              <span>Back</span>
            </a>
            <button class="prevBtn" title="Previous monster" data-prev-ID="<%=prevMonster.number%>">
              <span>Previous monster</span>
            </button>
            <button class="nextBtn" title="Next monster" data-next-ID="<%=nextMonster.number%>">
              <span>Next monster</span>
            </button>
          </div>
  
  
          <div class="buttonWrapper_inner">
            <button title="Favoriet">
              <img src="../images/icons/star.svg" alt="" />
            </button>
            <button title="Add to party">
              <span>+</span>
            </button>
  
  
          </div>
        </div>
      </header>
      
      <div class="elementWrapper imageWrapper" id="header">
        <img class="monsterImage" src="../images/large/<%=currentMonster.name%>.png" alt="monster image">
        <div class="imageWrapper_inner">
          <span class="number">#<%=currentMonster.number%></span>
          <span class="name"><%=currentMonster.name%></span>
        </div>
      </div>


      <div class="elementWrapper" id="basicInfo">
        <div class="header">
          <span>Basic info</span>
        </div>

        <div class="table element">
          <div>
            <p>
              Type: <% if (currentMonster.basic.attackType){ %>
              <img class="icon" src="../images/attackTypes/<%=currentMonster.basic.attackType%>.svg" alt="" />
              <% } %>
            </p>
            <p>
              Attack: <% if (currentMonster.basic.attackElement){ %>
              <img class="icon" src="../images/elements/small/<%=currentMonster.basic.attackElement%>.svg" alt="" />
              <% } %>
            </p>
          </div>

          <div>
            <p>
              Defense: <% if (currentMonster.basic.defenseElement){ %>
              <img class="icon" src="../images/elements/small/<%=currentMonster.basic.defenseElement%>.svg" alt="" />
              <% } %>
            </p>
            <p>
              Weakness: <% if (currentMonster.basic.defenseWeakness){ %>
              <img class="icon" src="../images/elements/small/<%=currentMonster.basic.defenseWeakness%>.svg" alt="" />
              <% } %>
            </p>
          </div>

          <div>
            <p class="rarity">
              <%=currentMonster.basic.rarity%> <img class="icon" src="../images/icons/star-brown.svg" alt="" />
            </p>
            <p>
              <% if (currentMonster.basic.hatchable){ %>
              hatchable
              <% } else { %>
              <span>-</span>
              <% } %>
            </p>
          </div>

        </div>

        <% if (currentMonster.basic.ridingActions){ %>
        <div class="riderActions element">
          <span class="elementHeader">
            Rider Action
          </span>
          <ul>
            <%for (let i=0; i < currentMonster.basic.ridingActions.length; i++) {%>
            <li>- <%=currentMonster.basic.ridingActions[i]%></li>
            <% } %>

          </ul>

        </div>
        <% } %>
      </div>

